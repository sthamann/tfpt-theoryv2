{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TFPT results schema v1",
  "type": "object",
  "required": ["schema_version", "module_id", "spec", "results", "checks", "warnings"],
  "properties": {
    "schema_version": { "type": "integer", "enum": [1] },
    "module_id": { "type": "string" },
    "spec": {
      "type": "object",
      "required": ["module_id", "inputs", "formulas", "determinism", "validation"],
      "properties": {
        "module_id": { "type": "string" },
        "name": { "type": "string" },
        "inputs": { "type": "array", "items": { "type": "string" } },
        "outputs": { "type": "array", "items": { "type": "string" } },
        "formulas": { "type": "array", "items": { "type": "string" } },
        "validation": { "type": "array", "items": { "type": "string" } },
        "determinism": { "type": "string" },
        "assumptions": { "type": "array", "items": { "type": "string" } },
        "question": { "type": ["string", "null"] },
        "objective": { "type": "array", "items": { "type": "string" } },
        "gaps": { "type": "array", "items": { "type": "string" } }
      },
      "additionalProperties": true
    },
    "results": { "type": "object" },
    "plot": { "type": ["object", "null"] },
    "checks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["check_id", "passed", "detail"],
        "properties": {
          "check_id": { "type": "string" },
          "passed": { "type": "boolean" },
          "detail": { "type": "string" },
          "severity": { "type": ["string", "null"] }
        },
        "additionalProperties": true
      }
    },
    "warnings": { "type": "array", "items": { "type": "string" } }
  },
  "additionalProperties": true
}
